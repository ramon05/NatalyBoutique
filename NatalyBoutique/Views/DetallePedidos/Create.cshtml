@model NatalyBoutique.Models.DetallePedidos

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Nuevo Detalle</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label"></label>
                <select asp-for="IdPedido" class ="form-control" asp-items="ViewBag.IdPedido"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdArticulo" class="control-label"></label>
                <select asp-for="IdArticulo" class ="form-control" asp-items="ViewBag.IdArticulo"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="Tamaño" class="control-label"></label>
                <input asp-for="Tamaño" class="form-control" />
                <span asp-validation-for="Tamaño" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeccionBodega" class="control-label"></label>
                <input asp-for="SeccionBodega" class="form-control" />
                <span asp-validation-for="SeccionBodega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroEstante" class="control-label"></label>
                <input asp-for="NumeroEstante" class="form-control" />
                <span asp-validation-for="NumeroEstante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadOrdenada" class="control-label"></label>
                <input asp-for="CantidadOrdenada" class="form-control" />
                <span asp-validation-for="CantidadOrdenada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadSurtida" class="control-label"></label>
                <input asp-for="CantidadSurtida" class="form-control" />
                <span asp-validation-for="CantidadSurtida" class="text-danger"></span>
            </div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-success" />
				<a  class="btn btn-primary" asp-action="Index">Cancelar</a>
			</div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
