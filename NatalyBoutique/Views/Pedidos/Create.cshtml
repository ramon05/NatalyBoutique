@model NatalyBoutique.Models.Pedidos

@{
    ViewData["Title"] = "Create";

}


<h4>Nuevo Pedidos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class ="form-control mb-2" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPedido" class="control-label"></label>
                <input asp-for="CantidadPedido" class="form-control mb-2" />
                <span asp-validation-for="CantidadPedido" class="text-danger"></span>
            </div>
			<br />
			<div class="form-group">
				<input type="submit" value="Guardar" class="btn btn-success" />
				<a class="btn btn-primary" asp-action="Index">Cancelar</a>
			</div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
