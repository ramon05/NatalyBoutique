@model NatalyBoutique.Models.Pedidos

@{
    ViewData["Title"] = "Edit";
}


<h2>Editar Pedidos</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPedidos" />
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPedido" class="control-label"></label>
                <input asp-for="CantidadPedido" class="form-control" />
                <span asp-validation-for="CantidadPedido" class="text-danger"></span>
            </div>
			<div class="form-group">
				<input type="submit" value="Guardar"  class="btn btn-success"  />
				<a class="btn btn-primary" asp-action="Index">Cancelar</a>
			</div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
